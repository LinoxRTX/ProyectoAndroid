<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".Rutina">

    <!-- Contenedor vertical -->
    <LinearLayout
        android:id="@+id/contenedorRutina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nombre de la rutina -->
        <TextView
            android:id="@+id/tvNombreRutinaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏋️ Rutina: Piernas Poderosas"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#00BCD4" />

        <!-- Tipo y objetivo -->
        <TextView
            android:id="@+id/tvTipoObjetivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: Piernas  |  Objetivo: Ganar masa"
            android:textColor="#555555"
            android:layout_marginTop="8dp"
            android:textSize="16sp" />

        <!-- Fecha -->
        <TextView
            android:id="@+id/tvFechaRutina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🗓️ Inicio: --"
            android:textColor="#555555"
            android:layout_marginTop="8dp"
            android:textSize="16sp" />

        <!-- Proteínas recomendadas -->
        <TextView
            android:id="@+id/tvProteinas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🍗 Proteínas recomendadas: --"
            android:textColor="#555555"
            android:layout_marginTop="8dp"
            android:textSize="16sp" />

        <!-- Separador visual -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#DDDDDD" />

        <!-- Título ejercicios -->
        <TextView
            android:id="@+id/tvTituloEjercicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📋 Ejercicios incluidos"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp" />

        <!-- RecyclerView de ejercicios -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEjercicios"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            tools:listitem="@layout/item_ejercicio" />
    </LinearLayout>

    <!-- Botón cerrar -->
    <Button
        android:id="@+id/btnCerrarDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar detalle"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF9800"
        android:padding="12dp"
        android:onClick="volverrutina"
        app:layout_constraintTop_toBottomOf="@+id/contenedorRutina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
